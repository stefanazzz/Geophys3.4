    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "from matplotlib.widgets import Button, TextBox\n",
    "import time,pickle,copy\n",
    "from operator import itemgetter \n",
    "import pandas as pd\n",
    "import pygimli as pg\n",
    "import pygimli.meshtools as mt\n",
    "from pygimli.viewer.mpl import drawMesh\n",
    "from pygimli.physics.gravimetry import gradUCylinderHoriz, solveGravimetry\n",
    "from shapely.ops import linemerge, unary_union, polygonize\n",
    "from shapely.geometry import LineString, Polygon\n",
    "#\n",
    "def init_model():\n",
    "    global layrs,hi,wi,pos,mona\n",
    "    layrs=[[[left,i],[right,i]] for i in horizons]\n",
    "    layrs.append([[left,bottom],[right,bottom]])\n",
    "    mle=max([top-bottom,left-right])\n",
    "    hi=(top-bottom)/mle\n",
    "    wi=(right-left)/mle\n",
    "    pos=[]; \n",
    "    try: \n",
    "        mona\n",
    "    except NameError:\n",
    "        mona='m2.tmp'\n",
    "    try: \n",
    "        polygons\n",
    "    except NameError:\n",
    "        polygons=[]\n",
    "#\n",
    "def init_fig():\n",
    "    global ax1\n",
    "    ax1 = fig0.add_axes([0.07, 0.0, .8, .7]) #[left bottom width height]\n",
    "    ax1.set_xlim(left,right);\n",
    "    ax1.set_ylim(bottom,(top-bottom)*.3)\n",
    "    ax1.set_aspect(1)\n",
    "#\n",
    "def check_axpos():\n",
    "    global axpos\n"
    "    if 'axpos' in globals(): \n",
    "        for i in range(len(axpos)): \n",
    "            f_replot()\n",
    "    else:\n",
    "        axpos=[]; aypos=[];\n",
    "#\n",
    "def define_polygons():\n",
    "    global altpols,markpos\n",
    "    if polygons == []: \n",
    "        \"Error: no polygons defined. Reload model file or redraw polygons\"\n",
    "    altpols=copy.deepcopy(polygons)\n",
    "\n",
    "    # cleave polygons that crosscut horizons\n",
    "    for nl, lay in enumerate(layrs):\n",
    "        line2=LineString(lay)\n",
    "        newpols=[]\n",
    "        for npo, pol in enumerate(altpols):\n",
    "            poly=Polygon(pol)\n",
    "            #ans=line1.intersection(line2)\n",
    "            if poly.intersects(line2):\n",
    "                ans=poly.intersection(line2)\n",
    "                print(ans)\n",
    "                nup=cut_polygon_by_line(poly, line2)\n",
    "                newp=unpak(cut_polygon_by_line(poly, line2)[0]) ; newpols.append(newp)\n",
    "                newp=unpak(cut_polygon_by_line(poly, line2)[1]) ; newpols.append(newp)\n",
    "            else:\n",
    "                newpols.append(pol)\n",
    "        altpols=copy.deepcopy(newpols)\n",
    "    \n",
    "    # compute centroids:\n",
    "    markpos=[];\n",
    "    for n, popo in enumerate(altpols):\n",
    "        arr = np.asarray(popo) ; length = arr.shape[0]\n",
    "        m_x = np.sum(arr[:, 0])/length ;    m_y = np.sum(arr[:, 1])/length \n",
    "        markpos.append([m_x,m_y])\n",
    "   \n",
    "    # eliminate polygons above surface if topography=False:\n",
    "    canc=[]\n",
    "    if topography==False:\n",
    "        for n, popo in enumerate(altpols):\n",
    "            if (markpos[n][1]>horizons[0]):\n",
    "                canc.append(n)\n",
    "        for nu in (canc):\n",
    "            for num in range(nu,len(altpols)-1):\n",
    "                    markpos[num]=markpos[num+1]\n",
    "                    altpols[num]=altpols[num+1]\n",
    "    if len(canc) > horizons[0] :\n",
    "        markpos=markpos[:-len(canc)]  \n",
    "        altpols=altpols[:-len(canc)]    \n",
    "#\n",
    "def onclick2(event): \n",
    "    global pos\n",
    "    if event.inaxes in [ax1] and event.button == 1: \n",
    "        ax1.text(event.xdata, event.ydata, 'o', color='r', weight='bold',\\\n",
    "          horizontalalignment='center',verticalalignment='center');\n",
    "        pos.append([event.xdata,event.ydata])\n",
    "        #ax1.set_title('%.1f' % pos[-1:][0][0] + ',' + '%.1f' % pos[-1:][0][1])\n",
    "\n",
    "def f_next(event):\n",
    "    global pos,apos,pop,axpos,aypos,axposp,ayposp,polygons\n",
    "    if event.inaxes in [ax_next] and event.button == 1:\n",
    "        pop = np.array(pos).T.tolist()\n",
    "        polygons.append(pos)\n",
    "        pos=[]\n",
    "        axpos.append(pop[0])\n",
    "        aypos.append(pop[1])\n",
    "        ax1.clear()\n",
    "        ax1.set_xlim(left,right);#ax1.set_ylim(bottom,top)\n",
    "        f_replot()\n",
    "        \n",
    "def f_save(event):\n",
    "    global mona\n",
    "    if event.inaxes in [ax_save] and event.button == 1:\n",
    "        nlay=str(len(layrs));npol=str(\"%i\" % len(axpos));\n",
    "        df=pd.DataFrame([[nlay,npol]])\n",
    "        for i in range(len(layrs)):\n",
    "            df = pd.concat([df, pd.DataFrame([[ \"Layer\"+str(int(i+1)), str(len(layrs[i])) ]])], ignore_index=True)\n",
    "            df = pd.concat([df, pd.DataFrame(np.asarray([getx(layrs[i]), gety(layrs[i])]).T.tolist())], ignore_index=True)\n",
    "        for i in range(len(axpos)):\n",
    "            df = pd.concat([df, pd.DataFrame([[ \"Polygon\"+str(i+1), str(len(axpos[i])) ]])])\n",
    "            df = pd.concat( [df, pd.DataFrame(np.asarray([axpos[i],aypos[i]]).T.tolist())] )\n",
    "        #\n",
    "        df.to_csv(mona,header=False,index=False)\n",
    "        ax1.set_title(\"saved\")\n",
    "        # ff=open ('/home/stefan/Geophys-master/Gravity/toto3.txt','w')\n",
    "        # ff.write('test3')\n",
    "        # ff.close()\n",
    "        # f_replot()\n",
    "\n",
    "def f_read(event):\n",
    "    global axpos,aypos,layrs,polygons,mona,left,right,bottom,top,y1,y2,x1,x2\n",
    "    left = 1e12; right = -1e12; bottom= 1e12; top= -1e12;\n",
    "    if event.inaxes in [ax_read] and event.button == 1:\n",
    "        dfin=pd.read_csv(mona,header=None,dtype=object);\n",
    "        nlay=int(dfin.iloc[0,0]);npol=int(dfin.iloc[0,1])\n",
    "        lineno=1;\n",
    "        layrsin=[];polyin=[];polygons=[];\n",
    "        for lay in range(nlay):\n",
    "            laynam=dfin.iloc[lay+lineno,0]\n",
    "            npo=int(dfin.iloc[lay+lineno,1])\n",
    "            x1,y1 = int(dfin.iloc[lay+lineno+1,0]), int(dfin.iloc[lay+lineno+1,1])\n",
    "            x2,y2 = int(dfin.iloc[lay+lineno+2,0]), int(dfin.iloc[lay+lineno+2,1])\n",
    "            layrbuf=[]\n",
    "            for j in range(npo):\n",
    "                layrbuf.append([float(dfin.iloc[lay+lineno+1,0]),float(dfin.iloc[lay+lineno+1,1])])\n",
    "                lineno=lineno+1\n",
    "            layrsin.append(layrbuf)\n",
    "            if x1 < left: left = x1\n",
    "            if y1 < bottom: bottom = y2\n",
    "            if x2 > right: right = x2\n",
    "            if y2 > top: top = y2\n",
    "        lineno=lay+lineno+1\n",
    "        #print(lrsin);print('######### Polygons:')\n",
    "        for pol in range(npol):\n",
    "            polnam=dfin.iloc[lineno+pol,0]\n",
    "            npo=int(dfin.iloc[lineno+pol,1])\n",
    "            #print(polnam, \" npo:\", npo)\n",
    "            polybuf=[]\n",
    "            for k in range(npo):\n",
    "                polybuf.append([float(dfin.iloc[pol+lineno+1,0]),float(dfin.iloc[pol+lineno+1,1])])\n",
    "                lineno=lineno+1\n",
    "            polyin.append(polybuf)\n",
    "            polygons.append(polybuf)\n",
    "        axposin=[];ayposin=[];\n",
    "        for i in range(npol):\n",
    "            axposin.append(np.asarray(polyin[i]).T[0].tolist())\n",
    "            ayposin.append(np.asarray(polyin[i]).T[1].tolist())\n",
    "        layrs=layrsin[:];axpos=axposin[:];aypos=ayposin[:]\n",
    "        f_replot()\n",
    "        #print(axposin)\n",
    "        #print(ayposin)\n",
    "\n",
    "def f_delall(event):\n",
    "    global axpos,aypos,polygons\n",
    "    if event.inaxes in [ax_delall] and event.button == 1:\n",
    "        ax1.clear()\n",
    "        ax1.set_title('cleared')\n",
    "        ax1.set_xlim(left,right);#ax1.set_ylim(bottom,top)\n",
    "        axpos=[];aypos=[];polygons=[];\n",
    "        \n",
    "def f_delone(event):\n",
    "    global axpos,aypos,polygons\n",
    "    if event.inaxes in [ax_delone] and event.button == 1:\n",
    "        del axpos[ddata-1]\n",
    "        del aypos[ddata-1]\n",
    "        del polygons[ddata-1]\n",
    "        f_replot()\n",
    "        pos=[]    \n",
    "        \n",
    "def getx(lst):\n",
    "    xx=list(map(itemgetter(0), lst))\n",
    "    return(xx)   \n",
    "\n",
    "def gety(lst):\n",
    "    yy=list(map(itemgetter(1), lst))\n",
    "    return(yy)\n",
    "\n",
    "def f_replot():\n",
    "    ax1.clear()\n",
    "    #ax1.set_xlim(left,right);#ax1.set_ylim(bottom,(top-bottom)*.25)\n",
    "    ax1.set_xlim(left,right);\n",
    "    ax1.set_ylim(bottom,(top-bottom)*.5);ax1.set_aspect(1)\n",
    "    for ii in range(len(axpos)):\n",
    "        ax1.plot(axpos[ii],aypos[ii],'o');\n",
    "        ax1.plot(axpos[ii] + [axpos[ii][0]],aypos[ii] + [aypos[ii][0]],'-');\n",
    "        ax1.text(axpos[ii][0],aypos[ii][0], str(1+ii));\n",
    "    for ii in range(len(layrs)):\n",
    "        ax1.plot(getx(layrs[ii]),gety(layrs[ii]),'-')\n",
    "\n",
    "def f_plotlayrs():\n",
    "    ax1.set_xlim(left,right);#ax1.set_ylim(bottom,(top-bottom)*0.2)\n",
    "    ax1.set_ylim(bottom,(top-bottom)*.5);ax1.set_aspect(1)\n",
    "    for ii in range(len(layrs)):\n",
    "        ax1.plot(getx(layrs[ii]),gety(layrs[ii]),'-')\n",
    "\n",
    "\n",
    "def f_textbox(text):\n",
    "    global ddata\n",
    "    ddata = int(text)\n",
    "\n",
    "def f_filename(text):\n",
    "    global mona\n",
    "    mona = str(text)\n",
    "    \n",
    "def all_buttons():\n",
    "    global ax_next,ax_delall,ax_texbox,ax_delone,ax_save,ax_read,ax_filename,mona\n",
    "    global b_next, b_delall, b_textbox, b_delone, b_save, b_filename, b_read \n",
    "    ax_next = fig0.add_axes([0.10, 0.07+0.2*hi+.5, 0.1, 0.075])\n",
    "    ax_delall = fig0.add_axes([0.70,0.07+0.2*hi+.5,0.12,0.075])\n",
    "    ax_textbox = fig0.add_axes([0.5,0.07+0.2*hi+.5,0.08,0.075])\n",
    "    ax_delone = fig0.add_axes([0.5,0.07+0.11*hi+.5,0.08,0.075])\n",
    "    ax_save = fig0.add_axes([0.30,0.07+0.02*hi+.5,0.1,0.075])\n",
    "    ax_read = fig0.add_axes([0.30,0.07+0.11*hi+.5,0.1,0.075])\n",
    "    ax_filename = fig0.add_axes([0.30,0.07+0.2*hi+.5,0.1,0.075])\n",
    "    #\n",
    "    b_next = Button(ax_next, 'Next poly',hovercolor='green')\n",
    "    b_next.on_clicked(f_next)\n",
    "    b_delall = Button(ax_delall, '☠ Del all ⚠',hovercolor='red')\n",
    "    b_delall.on_clicked(f_delall)\n",
    "    b_textbox = TextBox(ax_textbox, 'Del. nr:', initial=\" \")\n",
    "    b_textbox.on_text_change(f_textbox)\n",
    "    b_delone = Button(ax_delone, 'Del poly', hovercolor='red')\n",
    "    b_delone.on_clicked(f_delone)\n",
    "    b_save = Button(ax_save, 'Save modl', hovercolor='pink')\n",
    "    b_save.on_clicked(f_save)\n",
    "    b_filename = TextBox(ax_filename, 'file:', initial='m2.tmp')\n",
    "    b_filename.on_text_change(f_filename)\n",
    "    b_read = Button(ax_read, 'Read modl', hovercolor='pink')\n",
    "    b_read.on_clicked(f_read)\n",
    "    \n",
    "\n",
    "def unpak(toto):\n",
    "    titi=np.asarray([[p for p in toto.exterior.coords.xy[0]],\n",
    "    [p for p in toto.exterior.coords.xy[1]]]).T.tolist()\n",
    "    return(titi)\n",
    "def cut_polygon_by_line(polygon, line):\n",
    "    merged = linemerge([polygon.boundary, line])\n",
    "    borders = unary_union(merged)\n",
    "    polygons2 = polygonize(borders)\n",
    "    return list(polygons2)\n"
